{
    "name" : "browser-php",
    "description" : "PHP CLI and Web server on browser",
    "version" : "0.3.1",
    "keywords": [
        "browser",
        "node",
        "php"
    ],
    "homepage": "https://github.com/capsulescodes/browser-php",
    "repository": {
        "type": "git",
        "url": "https://github.com/capsulescodes/browser-php"
    },
    "license": "MIT",
    "author" : {
        "name": "Yannick Decat",
        "email": "yannick@capsules.codes",
        "url": "https://capsules.codes/"
    },
    "scripts" : {
        "build" : "esbuild src/cli.ts src/installer.ts src/server.ts --bundle --platform=node --format=cjs --packages=external --minify --outdir=build",
        "postinstall": "node build/installer.js"
    },
    "files" : [
        "!*",
        "build"
    ],
    "bin" : {
        "serve" : "build/server.js",
        "php" : "build/cli.js"
    },
    "dependencies" : {
        "@php-wasm/node" : "^0.6.3",
        "dotenv" : "^16.4.5",
        "dotenv-expand" : "^11.0.6"
    },
    "devDependencies" : {
        "@types/node" : "^20.11.21",
        "esbuild" : "^0.20.1",
        "typescript" : "^5.3.3"
    }
}
